model Client {
  id Int @id @default(autoincrement())
  usuario String @unique
  senha String 
  nome String 
  cpf String
  email String @unique
  telefone Int 
  celular Int
  nascismento Int
  endereco String
  numero Int
  bairro String
  complemento String
  cidade String
  estado String
  cep Int
