model Provider {
  id Int @id @default(autoincrement())
  usuario String @unique
  senha String
  nome String
  razao_social String
  cnpj String @unique
  email String @unique
  telefone Int
  celular Int
  endereco String
  numero Int
  bairro String
  complemento String
  cidade String
  estado String
  cep Int 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Token {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  hash  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}